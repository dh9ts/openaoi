<OpenAoiRoot>:
    orientation: "vertical"
    
    ActionBar:
        ActionView:
            ActionPrevious:
                title: ""
                with_previous: False
            ActionOverflow:
                ActionButton:
                    text: "Settings"
                    on_press: app.open_settings()
                    
    ScreenManager:
        id: kivy_screen_manager
        StartScreen:
            name: "start_screen"

<StartScreen@Screen>:
    BoxLayout:
        orientation: "vertical"
        padding: root.width * 0.02, root.height * .02
        spacing: min(root.width, root.height) * .02
        
        Label:
            text: "[b]StartScreen[/b]"
            markup: True
            
        Button:
            text: "Step 1"
        Button:
            text: "Step 2"
        Button:
            text: "Step 3"
            
        